DOCKER_REGISTRY_URL=ghcr.io
DOCKER_USERNAME=seu-usuario-github
DOCKER_PASSWORD=seu-token-github

NODE_ENV=production
LOG_LEVEL=info

MAX_STICKER_SIZE=100
MAX_VIDEO_DURATION=30
STICKER_QUALITY=80

# Configurações do WhatsApp
WHATSAPP_SESSION_DIR=./data/sessions
WHATSAPP_DATA_DIR=./data

# Configurações do Chrome para Linux (Oracle Cloud VM)
CHROME_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Monitoramento
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

MAX_CONCURRENT_STICKERS=1
STICKER_SIZE=512

STORAGE_PATH=./data
LOG_DIRECTORY=./logs

# Configurações adicionais do Puppeteer para ambiente headless
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--no-first-run,--no-zygote,--single-process,--disable-gpu